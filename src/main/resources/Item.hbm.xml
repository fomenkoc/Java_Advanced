<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.gmail.fomenkoc.Item" table="item">
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>

		<property name="total" column="total" type="double" />

		
		<set name="carts" table="item_cart" inverse="false" lazy="true" fetch="select" cascade="all" >
			<key>
				<column name="item_id" not-null="true"></column>
			</key>
			<many-to-many entity-name="com.gmail.fomenkoc.Cart" column="cart_id">
				
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>